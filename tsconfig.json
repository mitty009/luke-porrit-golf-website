  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": ["node"]          // ðŸ‘ˆ gives you 'process', 'Buffer', etc.
  },
  "include": ["functions/**/*.ts"]
}